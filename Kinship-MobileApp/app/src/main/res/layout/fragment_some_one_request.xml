<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/esome_one_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_some_one_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Name"
                android:inputType="text"
                android:textColor="#FE8A03"
                android:textColorHint="#D14035"
                android:textSize="20sp"
                android:theme="@style/MyEditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/esome_one_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/esome_one_name"
            app:layout_constraintVertical_bias="0.061">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_some_one_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Phone Number"
                android:inputType="number"
                android:textColor="#FE8A03"
                android:textColorHint="#D14035"
                android:textSize="20sp"
                android:theme="@style/MyEditTextTheme" />
        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:id="@+id/spinner_some_one_search_blood_group"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/esome_one_phone_number" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/units"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_some_one_search_blood_group"
            app:layout_constraintVertical_bias="0.061">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_some_one_search_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Units"
                android:inputType="number"
                android:textColor="#FE8A03"
                android:textColorHint="#D14035"
                android:textSize="20sp"
                android:theme="@style/MyEditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_some_one_search_district"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/units" />

        <Spinner
            android:id="@+id/spinner_some_one_search_hospitals"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_some_one_search_district" />

        <Spinner
            android:id="@+id/spinner_some_one_relationship"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_some_one_search_hospitals" />

        <Button
            android:id="@+id/button_some_one_search_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn"
            android:text="SUBMIT"
            android:textSize="19dp"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_some_one_relationship" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/button_some_one_search_submit"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>