<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_user_registration"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/alert_one_day_diseases_get_Verify_following_details"
            android:textSize="17dp"
            android:textColor="#D14035"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/alert_one_day_diseases_get_checkbox1_sleep_well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_one_day_diseases_get_Are_you_Slept_well_yesterday"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <CheckBox
            android:id="@+id/alert_one_day_diseases_get_checkbox2_antibiotics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_one_day_diseases_get_Did_you_take_any_antibiotics_tablets"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_one_day_diseases_get_checkbox1_sleep_well" />

        <CheckBox
            android:id="@+id/alert_one_day_diseases_get_checkbox3_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/alert_one_day_diseases_get_Did_you_drink_Alcohol_yesterday"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_one_day_diseases_get_checkbox2_antibiotics"/>

        <CheckBox
            android:id="@+id/alert_one_day_diseases_get_checkbox4_reaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/alert_one_day_diseases_get_Did_you_face_any_side_effects_in_previous_donation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_one_day_diseases_get_checkbox3_alcohol" />

        <CheckBox
            android:id="@+id/alert_one_day_diseases_get_checkbox5_tooth_extraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/alert_one_day_diseases_get_Had_tooth_extraction_in_the_past_3_weeks"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_one_day_diseases_get_checkbox4_reaction" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/alert_one_day_diseases_get_submit_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="15dp"
            android:background="@color/toolBarColor"
            android:padding="12dp"
            android:text="@string/alert_one_day_diseases_get_SUBMIT"
            android:textSize="15sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_one_day_diseases_get_checkbox5_tooth_extraction"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="13dp"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_one_day_diseases_get_submit_button" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>