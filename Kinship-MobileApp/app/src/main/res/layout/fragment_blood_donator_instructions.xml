<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/homeFragmentBackgroundColor"
    android:scrollbars="none"
    tools:context="com.example.elcot.kinship2.BloodDonatorInstructionsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_blood_donator_instructions_ConstrainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_blood_donator_instructions_ConstrainLayout_toolBar"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="#D14035"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintBottom_toTopOf="@id/textView6"/>

        <TextView
            android:id="@+id/fragment_blood_donator_instructions_blood_donator_instructions_TextView"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:gravity="center"
            android:text="@string/blood_donator_instructions_heading"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_blood_donator_instructions_ConstrainLayout_toolBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="72dp"
            android:layout_height="54dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:background="@android:drawable/ic_menu_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_blood_donator_instructions_blood_donator_instructions_TextView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="448dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/blood_donator_instructions_textview"
            app:layout_constraintBottom_toBottomOf="@+id/textView01"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_blood_donator_instructions_ConstrainLayout_toolBar" />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
