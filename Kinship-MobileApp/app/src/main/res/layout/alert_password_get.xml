<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/lightWhite"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/alert_password_get_password_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="@string/alert_password_get_password_editText"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:theme="@style/MyEditTextTheme" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/alert_password_get_confirm_password_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="@string/alert_password_get_confirm_password_editText"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:theme="@style/MyEditTextTheme" />

    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/alert_password_get_confirmPasswordButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/toolBarColor"
        android:padding="12dp"
        android:text="@string/alert_password_get_confirmPasswordButton"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white" />


</LinearLayout>
