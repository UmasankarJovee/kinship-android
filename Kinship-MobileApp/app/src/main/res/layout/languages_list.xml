<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioButton
        android:id="@+id/languages_list_tamil_radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layoutDirection="rtl"
        android:text=""
        android:textSize="10dp"
        android:padding="10dp"
        android:background="@drawable/textview_border"
        android:checked="false"/>
    <RadioButton
        android:id="@+id/languages_list_english_radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layoutDirection="rtl"
        android:text=""
        android:textSize="10dp"
        android:padding="10dp"
        android:background="@drawable/textview_border"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@+id/languages_list_tamil_radioButton"/>
    <RadioButton
        android:id="@+id/languages_list_hindi_radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layoutDirection="rtl"
        android:text=""
        android:textSize="10dp"
        android:padding="10dp"
        android:background="@drawable/textview_border"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@+id/languages_list_english_radioButton"/>


</android.support.constraint.ConstraintLayout>