<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:background="@drawable/textview_border"
    android:orientation="horizontal">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/all_requestor_inner_list_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.joveeinfotech.bloodex.CircleImageView
            android:id="@+id/all_requestor_inner_list_constraintLayout_requestorProfile_circleImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.63"/>
        <ImageView
            android:id="@+id/all_requestor_list_cardView_constraintLayout_border_imageView"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:src="@drawable/right_side_border"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/all_requestor_inner_list_constraintLayout_requestorProfile_circleImageView"/>

        <TextView
            android:id="@+id/all_requestor_inner_list_constraintLayout_requestorName_textView"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:text="Ramakrishnan S"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/all_requestor_list_cardView_constraintLayout_border_imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/all_requestor_list_cardView_constraintLayout_border_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/all_requestor_inner_list_constraintLayout_hospitalName_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="in Government Rajaji Hospital"
            android:textColor="#D14035"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/all_requestor_list_cardView_constraintLayout_border_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/all_requestor_inner_list_constraintLayout_district_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Madurai"
            android:textColor="#D14035"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/all_requestor_list_cardView_constraintLayout_border_imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/all_requestor_list_cardView_constraintLayout_border_imageView"
            app:layout_constraintTop_toBottomOf="@+id/all_requestor_inner_list_constraintLayout_hospitalName_textView" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>