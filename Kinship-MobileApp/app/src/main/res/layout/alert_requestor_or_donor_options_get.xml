<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="#fcfcfd"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you Requestor or Donor?"
        android:textColor="#D14035"
        android:textSize="19dp"/>

    <RadioButton
        android:id="@+id/alert_requestor_or_donor_options_get_requestor_radio"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requestor"/>

    <RadioButton
        android:id="@+id/alert_requestor_or_donor_options_get_donor_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/alert_requestor_or_donor_options_get_next_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        android:background="#D14035"
        android:padding="12dp"
        android:text="NEXT"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#ffffff" />

</LinearLayout>
