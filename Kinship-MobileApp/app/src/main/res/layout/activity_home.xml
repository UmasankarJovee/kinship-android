<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joveeinfotech.bloodex.Home">


    <ScrollView
        android:id="@+id/activity_home_scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/homeFragmentBackgroundColor"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_login_navigation_bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <FrameLayout
            android:id="@+id/activity_home_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true" />

    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/activity_login_navigation_bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:elevation="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <!--android:background="?android:attr/windowBackground"-->
</android.support.constraint.ConstraintLayout>