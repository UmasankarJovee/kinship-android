<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_request_response_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_anchorGravity="bottom|right|end">


        <ImageView
            android:id="@+id/activity_request_response_fab"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/icon_fab_orange" />

        <ImageView
            android:id="@+id/activity_request_response_progressBar_refresh_static"
            android:visibility="invisible"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_refresh"
            />

        <ProgressBar
            android:id="@+id/activity_request_response_progressBar_refresh_dynamic"
            style="?android:attr/progressBarStyle"
            android:layout_marginTop="14dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:indeterminateDrawable="@drawable/ic_refresh"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

